@model mYSelfERPWeb.ViewModels.CompanyViewModel
@{
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm(actionName, "Company", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-body">
                        <h5 class="card-title">Company Information</h5>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Company Code</label>
                                    @Html.TextBoxFor(model => model.ComCode, new { @class = "form-control", @readonly = "readonly" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Company Name</label>
                                    @Html.TextBoxFor(model => model.ComName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Address</label>
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Phone</label>
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Fax</label>
                                    @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Mobile</label>
                                    @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Email</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control"})
                                </div>
                            </div>
                            <div class "col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Web Address</label>
                                    @Html.TextBoxFor(model => model.WebAddress, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <h5 class="card-title mt-5">Company Logo</h5>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <input class="form-control" type="file" name="companylogo" id="companylogo" onchange="fileExtentionCheck(this);">
                                </div>
                            </div>
                        </div>
                        @if (ViewBag.CompanyLogo != null)
                        {
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <img src="@ViewBag.CompanyLogo" alt="Company Logo" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="form-actions">
                        <div class="text-end">
                            <button type="submit" class="btn waves-effect waves-light btn-primary">
                                <i class="fa fa-save" aria-hidden="true"></i>
                                Save Company
                            </button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function fileExtentionCheck(input) {
        const allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
        if (!allowedExtensions.exec(input.value)) {
            toastr = toastr || window.toastr;
            toastr.error("Please upload a file in JPEG or PNG format.");
            input.value = '';
            return false;
        }
    }



</script>