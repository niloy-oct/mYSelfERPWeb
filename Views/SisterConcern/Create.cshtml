@model mYSelfERPWeb.ViewModels.SisterConcernViewModel
@{
    string actionName = ViewContext.RouteData.Values["action"].ToString();
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm(actionName, "SisterConcern", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-body">
                        <h5 class="card-title">Sister Concern Information</h5>
                        <hr />
                        <div class="row">
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label class="control-label">Sister Concern Code</label>
                                    @Html.TextBoxFor(model => model.SisterConcernCode, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="mb-3">
                                    <label class="control-label">Concern Name</label>
                                    @Html.TextBoxFor(model => model.SisterConcernName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                 <div class="mb-3">
                                    <label class="control-label">Company</label>
                                    <select id="company" class="select2 form-control custom-select" style="width: 100%; height: 36px" name="company">
                                        @foreach (var item in ViewBag.Companies as IEnumerable<SelectListItem>)
                                        {
                                            <option value="@item.Value" @(item.Value == ViewBag.SelectedCompany ? "selected" : "")>@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                      
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Address</label>
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Phone</label>
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Fax</label>
                                    @Html.TextBoxFor(model => model.Fax, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Mobile</label>
                                    @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Email</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="control-label">Web Address</label>
                                    @Html.TextBoxFor(model => model.WebAddress, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <h5 class="card-title mt-5">Sister Concern Logo</h5>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <input class="form-control" type="file" name="concernlogo" id="concernlogo" onchange="fileExtentionCheck(this);">
                                </div>
                                @if (ViewBag.SisterConcernLogo != null)
                                {
                                    <div class="mb-3">
                                        <img src="@ViewBag.SisterConcernLogo" alt="Sister Concern Logo" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="text-end">
                            <button type="submit" class="btn waves-effect waves-light btn-primary">
                                <i class="fa fa-save" aria-hidden="true"></i>
                                Save Sister Concern
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <script>
        function fileExtentionCheck(input) {
            const allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
            if (!allowedExtensions.exec(input.value)) {
                toastr = toastr || window.toastr;
                toastr.error("Please upload a file in JPEG or PNG format.");
                input.value = '';
                return false;
            }
        }



    </script>
